<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vitquizapp">

    <!-- Internet Permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Quizify"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VITQuizApp">

        <!-- Splash Screen (Launcher) -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login & Signup Activities -->
        <activity android:name=".activities.LoginActivity" android:exported="true"/>
        <activity android:name=".activities.SignupActivity" android:exported="true"/>
        <activity android:name=".activities.StudentLoginActivity" android:exported="true"/>
        <activity android:name=".activities.FacultyLoginActivity" android:exported="true"/>
        <activity android:name=".activities.StudentSignupActivity" android:exported="true"/>
        <activity android:name=".activities.FacultySignupActivity" android:exported="true"/>

        <!-- Main Dashboard Activities -->
        <activity android:name=".activities.RegisterActivity" android:exported="false"/>
        <activity android:name=".activities.DashboardActivity" android:exported="false"/>
        <activity android:name=".activities.StudentDashboardActivity" android:exported="false"/>
        <activity android:name=".activities.FacultyDashboardActivity" android:exported="false"/>
        <activity android:name=".activities.FacultyDashboard" android:exported="false"/>

        <!-- Quiz Activities -->
        <activity android:name=".activities.QuizListActivity" android:exported="false"/>
        <activity android:name=".activities.QuizActivity" android:exported="false"/>
        <activity android:name=".activities.StartQuizActivity" android:exported="false"/>
        <activity android:name=".activities.EnterQuestionActivity" android:exported="false"/>
        <activity android:name=".activities.AddQuestionsActivity" android:exported="false"/>
        <activity android:name=".activities.CreateQuizActivity" android:exported="false"/>
        <activity android:name=".activities.ResultActivity" android:exported="false"/>
        <activity android:name=".activities.ViewReportsActivity" android:exported="false"/>

    </application>
</manifest>
