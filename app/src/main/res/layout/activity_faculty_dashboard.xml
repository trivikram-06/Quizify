<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/facultyDashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/facultyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="👩‍🏫 Faculty Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/createQuizButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Create New Quiz"
        android:textSize="16sp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/viewReportsButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View Student Reports"
        android:textSize="16sp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnViewQuizzes"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View Published Quizzes"
        android:textSize="16sp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="16sp"
        android:backgroundTint="@color/red"
        android:textColor="@color/white" />
</LinearLayout>
