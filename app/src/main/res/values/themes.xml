<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="Theme.VITQuizApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorAccent">#FF9800</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton">
        <item name="android:backgroundTint">#4CAF50</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom TextView Style -->
    <style name="CustomTextView">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Base App Theme -->
    <!-- Splash Screen Theme -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="QuizifyButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:backgroundTint">#3498DB</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="QuizifySubButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:backgroundTint">#7F8C8D</item>
    </style>

    <style name="QuizOptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:buttonTint">@color/blue</item>
        <item name="android:textColor">@color/darkText</item>
    </style>

    <style name="OptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonTint">@color/blue</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>




</resources>
